{
  "name": "wordpress-agentic-ui-generator",
  "version": "1.0.0",
  "description": "Generate MCP servers with agentic UI from WordPress websites",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\" \"npm:dev:mcp-apps\"",
    "dev:backend": "npm run dev --workspace=@wordpress-mcp/backend",
    "dev:frontend": "npm run dev --workspace=@wordpress-mcp/frontend",
    "dev:mcp-apps": "npm run dev --workspace=@wordpress-mcp/mcp-apps",
    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build --workspace=@wordpress-mcp/shared --if-present && npm run build --workspace=@wordpress-mcp/mcp-apps && npm run build --workspace=@wordpress-mcp/backend",
    "build:frontend": "npm run build --workspace=@wordpress-mcp/shared --if-present && npm run build --workspace=@wordpress-mcp/frontend",
    "start:backend": "npm run start --workspace=@wordpress-mcp/backend",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx}\"",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mnfst/wordpress-agentic-ui-generator.git"
  },
  "keywords": [
    "mcp",
    "wordpress",
    "agentic-ui",
    "model-context-protocol"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mnfst/wordpress-agentic-ui-generator/issues"
  },
  "homepage": "https://github.com/mnfst/wordpress-agentic-ui-generator#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
