{
  "name": "@wordpress-mcp/mcp-apps",
  "version": "1.0.0",
  "description": "MCP Apps UI components for WordPress MCP servers",
  "type": "module",
  "scripts": {
    "dev": "npm run build && concurrently \"npm:watch:posts-list\" \"npm:watch:post-detail\"",
    "watch:posts-list": "INPUT=posts-list.html vite build --watch",
    "watch:post-detail": "INPUT=post-detail.html vite build --watch",
    "build": "tsc && rm -rf dist && npm run build:posts-list && npm run build:post-detail",
    "build:posts-list": "INPUT=posts-list.html vite build",
    "build:post-detail": "INPUT=post-detail.html vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "github:modelcontextprotocol/ext-apps",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@wordpress-mcp/shared": "*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.556.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "vite": "^5.1.0",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
